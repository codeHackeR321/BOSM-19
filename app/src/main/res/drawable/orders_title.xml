<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F3F7FF"/>
        </shape>
    </item>
    <item
            android:bottom="0dp"
            android:left="-100dp"
            android:right="-100dp"
            android:top="-80dp">
        <shape android:shape="oval">
            <gradient
                    android:startColor="#002DE1"
                    android:endColor="#61A5FF"
                    android:angle="90"
                    android:type="linear"
                    />
        </shape>
    </item>
</layer-list>